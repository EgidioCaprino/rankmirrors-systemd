#!/usr/bin/env sh

set -xe

cp /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist.backup

{
  curl -s 'https://www.archlinux.org/mirrorlist/?protocol=https&use_mirror_status=on' | sed -e 's/^#Server/Server/' -e '/^#/d' | rankmirrors -n 100 - > /etc/pacman.d/mirrorlist
} || {
  cp /etc/pacman.d/mirrorlist.backup /etc/pacman.d/mirrorlist && exit 1
}
